<body>
    <div class="title">
        <h1>Productos</h1>

        <a href="/api/carts">
            <label for="carts">Mira los carritos actuales</label>
            <img id="carticon" src="../images/cart.png" alt="carrito">
        </a>

        <a href="/api/">
            <img id="homeicon" src="../images/home.png" alt="home">
        </a>
    </div>

    <br>
    <br>

    <form id="productSearch">
        <label>Buscar producto por nombre</label>
        <input id="searchTitle" type="text">
        <button type="submit">Buscar</button>
    </form>

    <div class="list">
        <h3 id=""></h3>
        <table>
            <thead>
                <tr>
                    <td>Producto</td>
                    <td>Descripción</td>
                    <td>Categoría</td>
                    <td>Precio</td>
                    <td>Stock</td>
                    <td>ID de producto</td>
                    <td>User owner</td>
                    <td>Cambios</td>
                </tr>
            </thead>
            <tbody>
                {{#each products.docs}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.category}}</td>
                    <td>${{this.price}}</td>
                    <td>{{this.stock}}</td>
                    <td id="_id">{{this._id}}</td>
                    <td>{{this.owner}}</td>
                    <td>
                        <button id="deleteProduct" data-id={{_id}}>Eliminar</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div class="pagination">
        <a href="/api/products?page={{products.prevPage}}&&limit=">Prev</a>
        <a href="/api/products?page={{products.nextPage}}">Next</a>
        <h5>
            {{ products.page }} / {{ products.totalPages }}
        </h5>
    </div>

    <div class="uploadProducts">
        <h3 id="message"></h3>
        <button id="openModalBtn"> Agregar producto</button>

        <div id="modal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <form id="nuevoProducto" class="vertical-form">
                    <!-- Your form content goes here -->
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>
    <script type="module" src="/products.js"></script>
</body>